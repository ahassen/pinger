{
  "manifest_version": 2,

  "name": "pingR",
  "description": "Checks if pc is connected to the internet or not",
  "version": "1.1",
  "background": {
          "scripts": [
              "background.js"
          ],
          "persistent": false

      },

  "browser_action": {
    "default_title": "PingR!"
  },
  "icons": { "64": "icon64.png",
           "19": "icon19.png"},
  "permissions": [
    "activeTab",
    "http://*/",
    "https://www.google.com.et/*",
    "http://www.google.com.et/*",
    "notifications"
  ]
}
